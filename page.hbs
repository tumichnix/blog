{{!< default}}
{{#post}}
    <article class="post single {{post_class}}">
        {{#if image}}
            <div class="post-image">
                <img src="{{image}}" alt="">
            </div>
        {{/if}}
        <div class="post-content">
            <h1>{{title}}</h1>
            <div>{{content}}</div>
        </div>
    </article>
{{/post}}
