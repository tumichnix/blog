{{!< default}}
{{#post}}
    <article class="post single {{post_class}}">
        {{#if feature_image}}
            <div class="post-image">
                <img src="{{img_url feature_image}}" alt="">
            </div>
        {{/if}}
        <div class="post-content">
            <ul class="post-meta">
                <li><i class="ti-time"></i><span>{{date format="DD MMMM YYYY"}}</span></li>
                <li><i class="ti-tag"></i><span>{{tags prefix=""}}</span></li>
            </ul>
            <h1>{{title}}</h1>
            <div>{{content}}</div>
        </div>
        <hr class="sep-line">
        <div class="row pagination">
            {{#next_post}}
                <div class="col-xs-12 col-md-6">
                    <i class="fa fa-angle-left"></i>
                    <a class="next" href="{{url}}">{{title}}</a>
                </div>
            {{/next_post}}
            {{#prev_post}}
                <div class="col-xs-12 col-md-6">
                    <a class="next" href="{{url}}">{{title}}</a>
                    <i class="fa fa-angle-right"></i>
                </div>
            {{/prev_post}}
        </div>
    </article>
{{/post}}
