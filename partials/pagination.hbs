<ul class="pagination">
    {{#if prev}}
        <li>
            <a class="newer-posts" href="{{page_url prev}}" aria-label="Neuere Beiträge">
                <i class="fa fa-angle-left"></i>
            </a>
        </li>
    {{/if}}

    <li><span>Seite {{page}} von {{pages}}</span></li>

    {{#if next}}
        <li>
            <a class="older-posts" href="{{page_url next}}" aria-label="Ältere Beiträge">
                <i class="fa fa-angle-right"></i>
            </a>
        </li>
    {{/if}}
</ul>